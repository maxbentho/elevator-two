</Layout>

<style>
	:root {
		--offset: 2vw;
		--panel-width: min(60rem, calc(100% - 2 * var(--offset)));
	}

	.page {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	.split {
		flex: 1;
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		align-content: start;
		padding-bottom: var(--offset);
	}

	.panel {
		margin-top: var(--offset);
		margin-left: var(--offset);
		font-size: clamp(0.85rem, 1.4vw, 1rem);
		max-width: 55rem;
		width: var(--panel-width);
	}

	.panel.right {
		margin-right: var(--offset);
	}

	h3 {
		margin: 0;
		font-size: inherit;
		font-weight: inherit;
		text-transform: inherit;
	}

	.panel h3 {
		margin: 0;
		font-weight: inherit;
		font-size: inherit;
	}

	.hover-trigger {
		text-decoration: underline;
		cursor: pointer;
	}

	.hover-image {
		position: fixed;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		max-width: 20vw;
		max-height: 20vh;
		width: auto;
		height: auto;
		object-fit: contain;
		opacity: 0;
		pointer-events: none;
		transition: opacity 0.3s ease;
		z-index: 1000;
		display: block;
	}

	.page:has(.hover-trigger:hover) .hover-image {
		opacity: 0.85;
	}

	.panel.right h3 + h3 {
		margin-top: 1.25rem;
	}

	.panel a {
		color: inherit;
		text-decoration: underline;
		cursor: pointer;
		transition: opacity 0.2s ease;
	}

	.panel a:hover {
		opacity: 0.7;
	}

	.footer {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		align-items: start;
		padding: var(--offset);
		padding-top: 0;
	}

	.footer-column {
		width: var(--panel-width);
		max-width: 55rem;
		margin-left: var(--offset);
	}

	.footer-column-right {
		margin-right: var(--offset);
		text-align: left;
	}

	.footer a {
		color: inherit;
		text-decoration: underline;
		cursor: pointer;
		transition: opacity 0.2s ease;
	}

	.footer a:hover {
		opacity: 0.7;
	}

	@media (max-width: 768px) {
		.split {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.panel {
			margin-left: var(--offset);
			margin-right: var(--offset);
			font-size: clamp(1rem, 2vw, 1.2rem);
		}

		.panel.right {
			margin-right: var(--offset);
			margin-top: 2rem;
		}

		.footer {
			display: flex;
			flex-direction: column;
			gap: 1.5rem;
		}

		.footer-column {
			width: 100%;
			margin-left: var(--offset);
			margin-right: var(--offset);
		}

		.footer-column-right {
			text-align: left;
			margin-left: var(--offset);
			margin-right: var(--offset);
			order: -1;
		}
	}
</style>
